<div class="page-header">
  <h1><%= Promise.model_name.human(count: 2).capitalize %></h1>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3 categories">
      <!-- LEFT COLUMN --> 
      <br>
      <%= render 'shared/main_categories_list' %>
    </div>     

    <!-- MIDDLE -->
    <div class="span6">
      <div id="promisesResults">
      </div>
    </div>

    <!-- RIGHT COLUMN -->
    <div class="span2 party-nav"><br>
      <ul class="nav nav-pills nav-stacked">
        <li><a href="#" id="showAll">Vis alle</a></li>
        <% @parties.each do |party| %>
          <li>
            <a id="<%= party.external_id %>" href="#">
              <%= party.name %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<% content_for :document_ready do %>
  <script>
    $(document).ready(function () {
      var widget = HDO.promiseWidget.create({
        targetSelector: "#promisesResults",
        categoriesSelector: ".categories",
        partiesSelector: ".party-nav"     
      });

      widget.init();
    });
  </script>
<% end %>
