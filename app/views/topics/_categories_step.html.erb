<%= topic.inputs '', :class => 'sign_up' do %>
  <div class="well">
    <%= topic.text_field :title %>
    <%= topic.text_area :description, :rows => 5 %>
  </div>
<% end %>

<h1><%= Category.model_name.human count: 2 %></h2>
<div class="row">
  <% @categories.each do |cat_column| %>
          <div class="span4">
            <% cat_column.each do |cat_group| %>
              <div class="well">
                <h3><%=cat_group.name %></h3>
                  <p>
                    <%= check_box_tag "topic[category_ids][]", cat_group.id, @topic.categories.include?(cat_group) -%> <%= cat_group.name -%>
                  </p>
                  <% cat_group.children.each do |category| %>
                    <p>
                      <%= check_box_tag "topic[category_ids][]", category.id, @topic.categories.include?(category) -%>
                        <%= category.name %>
                      </p>
                  <% end %>
              </div>
            <% end %>
          </div>
  <% end %>
</div>