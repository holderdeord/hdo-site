<%= form.inputs do %>
  <%= hidden_field_tag 'topic[category_ids][]' %>

  <div class="well">
    <%= form.text_field :title %>
    <%= form.text_area :description, :rows => 5 %>
  </div>
<% end %>

<h1><%= Category.model_name.human(count: 2).capitalize %></h1>
<div class="row">
  <% @categories.each do |cat_column| %>
    <div class="span3">
      <% cat_column.each do |cat_group| %>
        <div class="well">
          <h3><%=cat_group.name %></h3>
          <% [cat_group, cat_group.children].flatten.each do |cat| %>
          <label class="checkbox">
            <%= check_box_tag "topic[category_ids][]", cat.id, @topic.categories.include?(cat) %>
            <%= cat.name %>
          </label>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>