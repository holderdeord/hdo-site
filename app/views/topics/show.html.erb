<%= render partial: 'shared/previous_next_links', locals: { next_item: @next_topic, previous_item: @previous_topic, item_text_attr: :name } %>

<% if @issues.empty? %>

  <div class="page-header">
    <h2>Ingen saker relatert til <%= @topic.downcased_name %> enda. Vi jobber med saken!</h2>
  </div>

<% else %>

  <div class="page-header">
    <h1>Saker relatert til <%= @topic.downcased_name %></h1>
  </div>

  <div class="row-fluid">
    <ul class="unstyled">
      <% @issues.each do |issue| %>
        <li>
          <h3><%= link_to issue.title, issue %></h3>
        </li>
      <% end %>
    </ul>
  </div>

<% end %>

<% if @other_issues.any? %>
  <div class="page-header">
    <h2>Andre saker</h2>
  </div>

  <div class="row-fluid">
    <ul class="unstyled">
      <% @other_issues.each do |issue| %>
        <li>
          <h3><%= link_to issue.title, issue %></h3>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
