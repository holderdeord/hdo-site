<div class="well">
  <h3><%= @question.from_name %> spurte:</h3>
  <big><%= @question.body %></big>
  <small><%= l @question.updated_at, format: :text_time %></small>
</div>

<div class="well">
  <h4>Skriv inn nytt svar:</h4>
  <%= form_for([:representative, @question, @answer]) do |f| %>
    <%= hidden_field_tag "answer[question_id]", @question.id %>
    <%= hidden_field_tag "answer[representative_id]", @question.representative_id %>

    <% if @answer.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% @answer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <label class="control-label"><%= Answer.human_attribute_name :body %></label>
      <div class="controls">
        <%= f.text_area :body %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<% @question.answers.each do |answer| %>
  <div class="well">
    <%= image_tag answer.representative.image.versions[:small], alt: answer.representative.full_name %>
    <p class="pull-right">
      <% case answer.status %>
      <% when 'pending' %>
        <span class="label label-warning">Avventer kontroll</span>
      <% when 'rejected' %>
        <span class="label label-important">Avvist</span>
      <% when 'approved' %>
        <span class="label label-success">Godkjent</span>
      <% end %>
      <small><%= l answer.updated_at, text_time: :format %></small>
    </p>
    <p><big><%= answer.body %></big></p>
  </div>
<% end %>