<table class="table table-striped" data-widget="tablesorter">
  <thead>
    <tr>
      <th><%= Proposition.human_attribute_name :description %></th>
      <th class="wide-table-header"><%= Proposition.human_attribute_name :on_behalf_of %></th>
      <th class="wide-table-header"><%= Proposition.human_attribute_name :delivered_by %></th>
      <th><%= Proposition.human_attribute_name :body %></th>
    </tr>
  </thead>

  <tbody>
    <% vote.propositions.each do |prop| %>
      <tr>
        <td><%= prop.description %></td>
        <td><%= prop.on_behalf_of %></td>
        <% if rep = prop.delivered_by %>
          <td><%= link_to rep.display_name, rep %> (<%= rep.party_at(vote.time).try(:external_id) || t('app.parties.none') %>)</td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= prop.body.html_safe %></td>
      </tr>
    <% end %>
  </tbody>
</table>

