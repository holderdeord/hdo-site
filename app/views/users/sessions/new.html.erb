<h2><%= t 'app.login' %></h2>

<%= form_for("user", :url => user_session_path) do |f| %>
  <%= flash[:alert] %>
  <%= f.label :email %>
  <%= f.text_field :email, autofocus: true %>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.submit t('app.login'), class:"btn btn-primary" %><br>
<% end %>

<%= link_to 'Glemt passord?', new_user_password_path %>
